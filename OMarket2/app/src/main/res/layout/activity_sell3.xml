<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/s3_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/s3_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Add Product"
            android:textColor="@color/colorAccent"
            android:textSize="24dp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            apps:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/s3_edt_pname"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edt_style"
                android:hint="Product name"
                android:inputType="text"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            apps:errorEnabled="true"
            apps:errorTextAppearance="@color/colorPrimaryDark">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/s3_edt_description"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:background="@drawable/edt_style"
                android:hint="Description"
                android:inputType="text"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/s3_btn_next"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_style"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>